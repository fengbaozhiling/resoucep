@CHARSET "UTF-8";

/* --------首页 -------------*/

/* 页面 */
.simple_style, .simple_style .content { background:#efefef; border:none; }

.simple_style .content { padding-top:20px; }

.drawing_rule { width:610px; float:left; background:url(../images/lottery/rule_shadow_bottom.gif) bottom center no-repeat; height:310px; }

.rule_content { background:#930; font-size:14px; color:#ffffcc; height:300px; }

.rule_content li { line-height:28px; height:28px; }

.rule_content .rule_shadow_right { position:absolute; top:10px; right:-15px; }

.task_lottery { width:364px; float:right; }

.lottery_content h1 { font-size:30px; color:#333; font-weight:bold; font-family:"微软雅黑"; height:30px; line-height:30px; }

.lottery_content .content_detail { width: 1200px; }

.lottery_content .content_detail li { background:url(../images/lottery/lottery_task_shadow.gif) bottom center no-repeat; height:238px; width:380px; float:left; margin-right:20px; margin-top:15px;}

.lottery_content .content_detail li .lottery_descrip { background:#fff; border:1px solid #dfdfdf; height:187px; padding:20px 30px; }

.lottery_content .content_detail li .lottery_descrip a { font-family:"宋体"; font-weight:bold; }
.lottery_content .content_detail li .lottery_descrip a:hover.button{background:#ec2828; border-color:#ec2828; color:#fff;}

/* 详细 */			
.lottery_detail { background:#D60F04; }

.lottery_detail .box_header { font-size:14px; position:relative; z-index:1; border:none; background:url(../images/lottery/lottery_info_top.jpg) no-repeat; width:410px; height:316px; padding:130px 730px 0 60px }

.lottery_detail .box_header .num { font:bolder 24px/30px "Hiragino Sans GB", "Microsoft Yahei", "微软雅黑", sans-serif; color:#fff; padding-left:160px; text-align:center; width:105px; overflow:hidden; white-space:nowrap; }

.lottery_detail .box_header .title { font-size:14px; color:#fff; padding-top:15px; width:410px; overflow:hidden; white-space:nowrap; text-overflow:ellipsis; }

.lottery_detail .box_header .title strong { color:#fc0 }

.lottery_detail .box_header .status { color:#fff; }

.lottery_detail .box_header .status em { font-style:normal; color:#fc0 }

.lottery_detail .box_header .time { padding:65px 0 5px 5px; width:390px; height:50px; overflow:hidden; white-space:nowrap; font-weight:500; line-height:50px; font-size:26px; font-family:Arial, Helvetica, sans-serif; margin:0;}

.lottery_detail .box_header .start { position:absolute; z-index:1; width:180px; height:180px; top:125px; right:153px; }

.lottery_detail .box_header .start a { display:block; width:180px; height:180px; border-radius:90px; overflow: hidden; text-indent:-999em; }

.lottery_detail .box_header .start a:hover { background:rgba(255,255,255,.1); }

.lottery_detail .box_detail { padding:0 25px; margin:0; background:url(../images/lottery/lottery_info_middle.jpg) center bottom repeat-x; }

.lottery_detail .lottery_info { background:#EAEAEA; padding:0 20px; }

.lottery_detail .box_footer { text-align:center; padding:60px 0 0; color:#ccc; background:url(../images/lottery/lottery_info_bottom.jpg) no-repeat; width:1200px; height:51px; }

.win_list { background:#600; width:330px; height:450px; overflow:hidden; display:inline; float:left; margin-right:20px; }

.win_list .title { color:#fff; background:#300; padding:15px 20px; font:bold 25px/30px Arial, Helvetica, sans-serif }

.win_list .w_list { padding:20px; color:#fff; font: 14px/25px sans-serif }

.win_list .w_list span { color:#f90; }

.win_list .w_list li { white-space:nowrap; width:290px; overflow:hidden; text-overflow:ellipsis; }

.rule_info { display:inline; float:left; width:540px; height:450px; padding-left:20px; background:url(../images/lottery/lottery_line.jpg) left bottom no-repeat; }

.rule_info .title { font:bolder 24px/30px "Hiragino Sans GB", "Microsoft Yahei", "微软雅黑", sans-serif; color:#600 }

.rule_info .title span { font-size:20px; color:#333; }

.rule_info dd { padding:20px 0px; font-size:14px; color:#333 }

.rule_info dd.big { font:bolder 24px/35px "Hiragino Sans GB", "Microsoft Yahei", "微软雅黑", sans-serif; }

.rule_info dd.big span { color:#c00 }

.borbox{border:1px solid #e9e9e9; background:#fff;}
.bar_title{background:url(../images/task/bars.png) repeat-x 0 -50px; height:40px; line-height:40px; padding:0 10px 0 15px;}
.bar_title b{float:left; font-size:14px; font-family:"微软雅黑";}
.bar_title span{float:right; color:#999; font-size:12px;}

.inner{padding:15px;}